
% superlive, logger

# Extract logger name
bash -c 'cd ~/workspace/repo/liveapp_root/liveapp_project && logger_names=$(rg -o "logging\.getLogger\(\"([^\"]*)\"\)" --replace "\$1" "<selected_file>") && if [ -n "$logger_names" ]; then selected_logger=$(echo "$logger_names" | fzf --prompt="Select logger name: " --height=40%) && echo "$selected_logger" | pbcopy && echo "Selected logger $selected_logger copied to clipboard"; else echo "No logger definitions found in <selected_file>"; fi'

$ selected_file: cd ~/workspace/repo/liveapp_root/liveapp_project && fd -e py -E "__init__.py" . | fzf --prompt="Select Python file: " --preview="rg -n 'logging\.getLogger' {} || echo 'No logger definitions found'" --height=70%
